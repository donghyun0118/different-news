{
  "compilerOptions": {
    "target": "ES2020" /* 최종 변환될 JavaScript 버전 */,
    "module": "CommonJS" /* 모듈 시스템 */,
    "outDir": "./dist" /* 변환된 .js 파일들이 저장될 폴더 */,
    "rootDir": "./" /* TypeScript 소스코드의 최상위 폴더 */,
    "strict": true /* 모든 엄격한 타입 검사 활성화 */,
    "esModuleInterop": true /* ES 모듈과의 호환성 지원 */,
    "skipLibCheck": true /* 라이브러리 타입 검사 스킵 */,
    "forceConsistentCasingInFileNames": true
  }
}
